	    });*/
	    
	    $("#btn<%= item.id %>").click(function(){
	    	var itemcontent = "<%= item.content %> : <%= item.price %>";
	        $("ol").append("<li>" + itemcontent + "</li>");
	    });
	});

</script>
	
	<button id="btn<%= item.id %>">
  	  <td><%= item.content %> </td>
  	  <td><%= item.price %></td> 
  	</button>
  		
  	
<% end %>
	<ol></ol>
</body>
</html>